                    <table>
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Image</th>
                                <th>Quantity</th>
                                <th>Price per Item</th>
                                <th>Action</th>
                                <th>Request Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.orderItems.forEach(item => { %>
                                <tr>
                                    <td><strong><%= item.name %></strong></td>
                                    <td>
                                        <% if (item.product && item.product.images && item.product.images.length > 0) { %>
                                          <% const relativeImagePath = "/productimages/" + item.product.images[0]; %>
                                          <img src="<%= encodeURI(relativeImagePath) %>" alt="<%= item.name %> Image" class="product-image" width="50" height="50">
                                        <% } else { %>
                                          <!-- Handle the case when item.product or item.product.images is null or empty -->
                                          <img src="/default-image.jpg" alt="Default Image" class="product-image" width="50" height="50">
                                        <% } %>
                                      </td>
                                      
                                      
                                      
                                      
                                    <td><%= item.quantity %></td>
                                    <td><%= item.pricePerItem %></td>
                                    <td>
                                        <% if (item.returnStatus === 'Not Returned') { %>
                                            <a id="returnButton_<%= item._id %>" class="btn btn--secondary" href="/return-product/<%= order._id %>/<%= item.id %>"
                                                data-toggle="modal" data-target="#returnModal_<%= item._id %>">
                                                Return
                                            </a>
                                        <% } else { %>
                                            <span class="<%= item.returnStatus === 'Pending' ? 'text-warning' : (item.returnStatus === 'Accepted' ? 'text-success' : 'text-danger') %>">
                                                <%= item.returnStatus === 'Pending' ? 'Return pending' : (item.returnStatus === 'Accepted' ? 'Return accepted' : 'Return rejected') %>
                                            </span>
                                        <% } %>
                                    </td>
                                    <div class="modal fade" id="returnModal_<%= item._id %>" tabindex="-1" role="dialog" aria-labelledby="returnModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="returnModalLabel">Provide Return Reason</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <form method="POST" action="/return-product/<%= order._id %>/<%= item.id %>">
                                                        <div class="form-group">
                                                            <label for="returnReason_<%= item._id %>">Select a reason for return:</label>
                                                            <select class="form-control" id="returnReason_<%= item._id %>" name="returnReason" required>
                                                                <option value="" disabled selected>Select a reason</option>
                                                                <option value="Defective">Defective product</option>
                                                                <option value="WrongItem">Received the wrong item</option>
                                                                <option value="ChangedMind">Changed my mind</option>
                                                                <!-- Add more options as needed -->
                                                            </select>
                                                        </div>
                                                
                                                        <div class="form-group">
                                                            <label for="additionalComments_<%= item._id %>">Additional Comments:</label>
                                                            <textarea class="form-control" id="additionalComments_<%= item._id %>" name="additionalComments" rows="3"></textarea>
                                                        </div>
                                                
                                                        <button type="submit" class="btn btn-primary">Submit Return</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <td><%= item.returnStatus%></td>

                                    
                                    
                                    
                                </tr>
                            <% }); %>
                        </tbody>
                        
