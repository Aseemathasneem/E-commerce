<script>
  $(document).ready(function() {
    var deletedImages = [];

    // Event handler for clicking the delete icon
    $('.delete-image').on('click', function(event) {
      event.preventDefault();

      var imageContainer = $(this).closest('.image-preview-container');

      var imageUrl = imageContainer.find('img').attr('src');
      var filename = imageUrl.split('/').pop();

      if (!deletedImages.includes(filename)) {
        imageContainer.remove();
        deletedImages.push(filename);
      }
    });

    // Form submission handler
    $('form').submit(function() {
      // Remove any existing hidden input for deletedImages
      $(this).find('#deletedImages').remove();

      // Create a hidden input for deletedImages and append it to the form
      var uniqueDeletedImages = new Set(deletedImages);
      var uniqueDeletedImagesArray = Array.from(uniqueDeletedImages);

      var hiddenInput = $('<input>').attr({
        type: 'hidden',
        id: 'deletedImages',
        name: 'deletedImages',
        value: JSON.stringify(uniqueDeletedImagesArray)
      });

      $(this).append(hiddenInput);
    });
  });
</script>



   
