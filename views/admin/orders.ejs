        <!-- Content wrapper -->
        <div class="col-12">
          <div class="card">
            <h1>Orders</h1>

            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Order Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                  <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.orderID %></td>
                        <td><%= order.orderDate.toLocaleDateString() %></td>
                        <td><%= order.user_id.name %></td>
                        <td><%= order.totalAmount %></td>
                        <td><%= order.status %></td>
                        <td>
                          <!-- Edit button with an edit icon -->
                          <form action="/admin/edit-order/<%= order._id %>" method="POST" style="display: inline;">
                            <select name="newStatus">
                              <option value="" disabled selected>Select Status</option>
                                <option value="Pending">Pending</option>
                                <option value="Placed">Placed</option>
                                <option value="Shipped">Shipped</option>
                                <option value="Delivered">Delivered</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <button type="submit"><i class="mdi mdi-pencil-outline me-1"></i>Edit</button>
                        </form>
          
                          <!-- Detail button with a detail icon (replace "i" with the actual icon you want to use) -->
                          <a href="/admin/order-details/<%= order._id %>">
                            <button>Details</button>
                          </a>
                      </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>   
          </div>
      </div>
      
            
