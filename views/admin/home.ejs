  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Get the data from the server-side rendering
      const paymentMethodData = <%- JSON.stringify(paymentMethodData) %>;
      const monthlySalesData = <%- JSON.stringify(monthlySalesData) %>;
  
      // Create a pie chart for payment method
      const ctxPaymentMethod = document.getElementById('paymentMethodChart').getContext('2d');
      const paymentMethodChart = new Chart(ctxPaymentMethod, {
        type: 'pie',
        data: {
          labels: paymentMethodData.labels,
          datasets: [{
            data: paymentMethodData.values,
            backgroundColor: [
              'rgba(255, 99, 132, 0.7)',
              'rgba(54, 162, 235, 0.7)',
              'rgba(255, 206, 86, 0.7)',
              'rgba(75, 192, 192, 0.7)',
              'rgba(153, 102, 255, 0.7)',
              'rgba(255, 159, 64, 0.7)',
              // Add more colors as needed
            ],
          }],
        },
      });
  
      // Create a bar chart for monthly sales
      const ctxMonthlySales = document.getElementById('monthlySalesChart').getContext('2d');
      const monthlySalesChart = new Chart(ctxMonthlySales, {
        type: 'bar',
        data: {
          labels: monthlySalesData.labels,
          datasets: [{
            label: 'Monthly Sales',
            data: monthlySalesData.values,
            backgroundColor: 'rgba(156, 148, 243, 1)', // Adjust color as needed
          }],
        },
      });
    });
  </script>
